THIS_DIR="$(cd $(dirname $0); pwd)/"

# プライベート用の設定
if [ "${PRIVATEPC+foo}" ]; then
  source "${THIS_DIR}private/.base_profile"
else
  # OS毎の設定
  if [ "$(uname)" = 'Darwin' ]; then
    # Mac
    source "$THIS_DIR.zprofile"
  elif [ "$(expr substr $(uname -s) 1 5)" = 'Linux' ]; then
    # Linux
    source "$THIS_DIR.profile"
  elif [ "$(expr substr $(uname -s) 1 10)" = 'MINGW32_NT' ]; then
    # Windows
    source "$THIS_DIR.bash_profile"
  else
    echo "$(uname -a)"
  fi
fi

